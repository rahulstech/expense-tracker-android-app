<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dreammaker.android.expensetracker">

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme.NoActionBar">

        <activity android:name="rahulstech.android.expensetracker.backuprestore.ui.BackupRestoreSettingsHomeActivity"
            android:label="@string/title_backup_restore_settings_home"
            android:exported="false"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".ui.splash.SplashActivity"
            android:noHistory="true"
            android:exported="true"
            android:theme="@style/AppTheme.NoActionBar.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="dreammaker.android.expensetracker.settings.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/AppTheme.NoActionBar"
            android:exported="false"/>
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="false"/>
    </application>

</manifest>