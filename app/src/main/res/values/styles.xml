<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimaryContainer">@color/colorPrimaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/colorOnPrimaryContainer</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorSecondaryContainer">@color/colorSecondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/colorOnSecondaryContainer</item>
    </style>

    <!-- NoActionBar Theme -->
    <style name="AppTheme.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- FullScreen Theme -->
    <style name="AppTheme.NoActionBar.FullScreen">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Widget Style -->

    <style name="Widget.AppTheme" parent="android:Widget" />

    <style name="Widget.AppTheme.FloatingActionButton">
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Full</item>
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="useCompatPadding">true</item>
        <item name="fabSize">normal</item>
        <item name="tint">?attr/colorOnSecondary</item>
    </style>

    <style name="Widget.AppTheme.ExtendedFloatingActionButton">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.ExtraLarge</item>
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="iconTint">@color/stateful_color_on_secondary</item>
        <item name="android:textColor">@color/stateful_color_on_secondary</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.LabelMedium</item>
    </style>

    <style name="Widget.AppTheme.InputChip" parent="Widget.Material3.Chip.Input">
        <item name="android:checkable">false</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Large</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="chipBackgroundColor">@color/stateful_color_secondary</item>
        <item name="android:textColor">@color/stateful_color_on_secondary</item>
        <item name="closeIconTint">@color/stateful_color_on_secondary</item>
        <item name="android:singleLine">true</item>
        <item name="singleLine">true</item>
    </style>

    <style name="Widget.AppTheme.AssistChip" parent="Widget.Material3.Chip.Assist">
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Large</item>
        <item name="chipStrokeColor">@android:color/transparent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="closeIconTint">@android:color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:checkable">false</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">true</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodySmall</item>
    </style>

    <style name="Widget.AppTheme.FilterChip" parent="Widget.Material3.Chip.Filter">
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Large</item>
        <item name="android:singleLine">true</item>
        <item name="android:checkable">true</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodySmall</item>
        <item name="chipStartPadding">8dp</item>
        <item name="chipEndPadding">8dp</item>
        <item name="chipIconEnabled">true</item>
        <item name="chipIconVisible">true</item>
        <item name="checkedIconEnabled">false</item>
        <item name="checkedIconVisible">false</item>
        <item name="iconSize">18dp</item>
    </style>

    <style name="Widget.AppTheme.Button.DatePicker" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/stateful_color_on_surface</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodyLarge</item>
        <item name="android:textStyle">bold</item>
        <item name="iconTint">@color/stateful_color_on_surface</item>
        <item name="iconPadding">8dp</item>
    </style>

    <style name="Widget.AppTheme.Button.PickerArrow" parent="Widget.Material3.Button.IconButton.Filled.Tonal">
        <item name="android:minWidth">24dp</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:layout_margin">6dp</item>
        <item name="iconSize">16dp</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="Widget.AppTheme.Button.Secondary" parent="Widget.Material3.Button">
        <item name="iconSize">24dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="backgroundTint">?attr/colorSecondary</item>
    </style>

</resources>
