<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetStart="@id/collapse"
        motion:constraintSetEnd="@id/expand"
        motion:duration="@android:integer/config_shortAnimTime">
        <OnClick
            motion:targetId="@id/create_history_menu"
            motion:clickAction="toggle"/>
    </Transition>

    <ConstraintSet android:id="@+id/collapse">
        <Constraint
            android:id="@id/btn_create_credit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintCircle="@id/create_history_menu"
            motion:layout_constraintCircleRadius="0dp"
            motion:layout_constraintCircleAngle="170"/>

        <Constraint
            android:id="@id/btn_create_debit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintCircle="@id/create_history_menu"
            motion:layout_constraintCircleRadius="0dp"
            motion:layout_constraintCircleAngle="126"/>

        <Constraint
            android:id="@id/btn_create_transfer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintCircle="@id/create_history_menu"
            motion:layout_constraintCircleRadius="0dp"
            motion:layout_constraintCircleAngle="92" />

        <Constraint
            android:id="@id/create_history_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rotation="0"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"/>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/expand">
        <Constraint
            android:id="@id/btn_create_credit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintCircle="@id/create_history_menu"
            motion:layout_constraintCircleRadius="-150dp"
            motion:layout_constraintCircleAngle="170"/>

        <Constraint
            android:id="@id/btn_create_debit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintCircle="@id/create_history_menu"
            motion:layout_constraintCircleRadius="-150dp"
            motion:layout_constraintCircleAngle="126"/>

        <Constraint
            android:id="@id/btn_create_transfer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintCircle="@id/create_history_menu"
            motion:layout_constraintCircleRadius="-150dp"
            motion:layout_constraintCircleAngle="92" />

        <Constraint
            android:id="@id/create_history_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rotation="45"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"/>
    </ConstraintSet>

</MotionScene>