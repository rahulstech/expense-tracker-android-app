<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:liftOnScroll="false"
        android:stateListAnimator="@null">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_scrollFlags="scroll|enterAlways">

            <LinearLayout
                android:id="@+id/section_picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_picker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppTheme.Button.DatePicker"
                    app:icon="@drawable/baseline_calendar_month"
                    tools:text="2-May-25"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_goto_present"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    style="@style/Widget.AppTheme.Button.DatePicker"
                    app:layout_constraintStart_toEndOf="@id/btn_picker"
                    app:layout_constraintTop_toTopOf="@id/btn_picker"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    tools:text="Today"/>

            </LinearLayout>

            <com.google.android.material.chip.ChipGroup android:id="@+id/filter_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/section_picker"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:selectionRequired="false"
                app:singleLine="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/filter_credit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppTheme.FilterChip"
                    app:chipIcon="@drawable/ic_credit_64"
                    app:chipIconTint="@color/on_background_color_credit"
                    app:chipBackgroundColor="@color/background_color_credit"
                    android:text="@string/label_history_type_credit"
                    android:textColor="@color/on_background_color_credit"
                    android:checked="true"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/filter_debit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppTheme.FilterChip"
                    app:chipIcon="@drawable/ic_debit_64"
                    app:chipIconTint="@color/on_background_color_debit"
                    app:chipBackgroundColor="@color/background_color_debit"
                    android:text="@string/label_history_type_debit"
                    android:textColor="@color/on_background_color_credit"
                    android:checked="true"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/filter_transfer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppTheme.FilterChip"
                    app:chipIcon="@drawable/ic_send_money_64"
                    app:chipIconTint="@color/on_background_color_transfer"
                    app:chipBackgroundColor="@color/background_color_transfer"
                    android:text="@string/label_history_type_transfer"
                    android:textColor="@color/on_background_color_transfer"
                    android:checked="true"/>

            </com.google.android.material.chip.ChipGroup>

            <TextView android:id="@+id/label_total_credit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/label_total_credit"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/filter_group" />

            <TextView android:id="@+id/total_credit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                android:textColor="@color/colorCredit"
                app:layout_constraintTop_toTopOf="@id/label_total_credit"
                app:layout_constraintStart_toEndOf="@id/label_total_credit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constrainedWidth="true"
                tools:text="0"/>

            <TextView android:id="@+id/label_total_debit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/label_total_credit"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/label_total_credit" />

            <TextView android:id="@+id/total_debit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                android:textColor="@color/colorDebit"
                app:layout_constraintStart_toEndOf="@id/label_total_debit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/label_total_debit"
                app:layout_constrainedWidth="true"
                tools:text="0"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.appbar.AppBarLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:shimmer_auto_start="true"
        tools:visibility="visible"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/history_placeholder_layout" />
            <include layout="@layout/history_placeholder_layout" />
            <include layout="@layout/history_placeholder_layout" />
            <include layout="@layout/history_placeholder_layout" />
            <include layout="@layout/history_placeholder_layout" />


        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/history_list"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:visibility="gone"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/history_item_layout"
        tools:itemCount="30"/>

    <TextView
        android:id="@+id/empty_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:padding="16dp"
        app:drawableTopCompat="@drawable/ic_history_36"
        android:drawablePadding="12dp"
        app:drawableTint="?attr/colorOnBackground"
        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
        android:text="@string/label_empty_history_list"
        android:textColor="?attr/colorOnBackground"
        app:layout_constraintTop_toBottomOf="@id/filter_group" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/add_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        app:icon="@drawable/ic_add"
        android:text="@string/label_add_history"
        app:layout_behavior="@string/hide_bottom_view_on_scroll_behavior"/>


</androidx.coordinatorlayout.widget.CoordinatorLayout>