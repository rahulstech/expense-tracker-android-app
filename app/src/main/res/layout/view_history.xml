<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/motion_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/history_list_fab_menu_motion_layout_description">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_data_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppTheme.Button.DatePicker"
        app:icon="@drawable/baseline_calendar_month"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias=".40"
        tools:text="Sun, 12-Dec-2025"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_goto_present"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        style="@style/Widget.AppTheme.Button.DatePicker"
        app:layout_constraintStart_toEndOf="@id/btn_data_picker"
        app:layout_constraintTop_toTopOf="@id/btn_data_picker"
        tools:text="@string/today"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/history_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/btn_data_picker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/create_history_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppTheme.FloatingActionButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_add"
        tools:ignore="ContentDescription" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_create_credit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="?attr/colorSecondary"
        android:textColor="?attr/colorOnSecondary"
        android:text="@string/menu_title_add_credit"
        app:icon="@drawable/ic_add"
        app:iconGravity="textTop"
        app:iconSize="24dp"
        tools:ignore="ContentDescription" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_create_debit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="?attr/colorSecondary"
        android:textColor="?attr/colorOnSecondary"
        android:text="@string/menu_title_add_debit"
        app:icon="@drawable/ic_add"
        app:iconGravity="textTop"
        app:iconSize="24dp"
        tools:ignore="ContentDescription" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_create_transfer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="?attr/colorSecondary"
        android:textColor="?attr/colorOnSecondary"
        android:text="@string/menu_title_add_transfer"
        app:icon="@drawable/ic_add"
        app:iconGravity="textTop"
        app:iconSize="24dp"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.motion.widget.MotionLayout>