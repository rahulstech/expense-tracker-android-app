<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="36dp"
    android:paddingBottom="24dp"
    android:paddingEnd="24dp"
    android:paddingStart="24dp">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_year_decrease"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        style="@style/Widget.Material3.Button.TonalButton"
        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full"
        app:icon="@drawable/baseline_arrow_right"
        app:iconSize="28dp"
        app:iconGravity="textEnd"
        android:rotation="-180"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/input_year"/>

    <Spinner
        android:id="@+id/input_year"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_year_increase"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/input_year"
        app:icon="@drawable/baseline_arrow_right"
        app:iconSize="28dp"
        app:iconGravity="textEnd"
        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full"
        style="@style/Widget.Material3.Button.TonalButton"/>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/months_layout"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_year"
        app:selectionRequired="true"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/month_january"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/label_january"
            android:checkable="true"
            app:chipBackgroundColor="@color/background_color_month"
            android:textColor="@color/on_background_color_month"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/month_february"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/label_february"
            android:checkable="true"
            app:chipBackgroundColor="@color/background_color_month"
            android:textColor="@color/on_background_color_month"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/month_march"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/label_march"
            android:checkable="true"
            app:chipBackgroundColor="@color/background_color_month"
            android:textColor="@color/on_background_color_month"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/month_april"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/label_april"
            android:checkable="true"
            app:chipBackgroundColor="@color/background_color_month"
            android:textColor="@color/on_background_color_month"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/month_may"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/label_may"
            android:checkable="true"
            app:chipBackgroundColor="@color/background_color_month"
            android:textColor="@color/on_background_color_month"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/month_june"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/label_june"
            android:checkable="true"
            app:chipBackgroundColor="@color/background_color_month"
            android:textColor="@color/on_background_color_month"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/month_july"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/label_july"
            android:checkable="true"
            app:chipBackgroundColor="@color/background_color_month"
            android:textColor="@color/on_background_color_month"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/month_august"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/label_august"
            android:checkable="true"
            app:chipBackgroundColor="@color/background_color_month"
            android:textColor="@color/on_background_color_month"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/month_september"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/label_september"
            android:checkable="true"
            app:chipBackgroundColor="@color/background_color_month"
            android:textColor="@color/on_background_color_month"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/month_october"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/label_october"
            android:checkable="true"
            app:chipBackgroundColor="@color/background_color_month"
            android:textColor="@color/on_background_color_month"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/month_november"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/label_november"
            android:checkable="true"
            app:chipBackgroundColor="@color/background_color_month"
            android:textColor="@color/on_background_color_month"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/month_december"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/label_december"
            android:checkable="true"
            app:chipBackgroundColor="@color/background_color_month"
            android:textColor="@color/on_background_color_month"/>


    </com.google.android.material.chip.ChipGroup>

</androidx.constraintlayout.widget.ConstraintLayout>