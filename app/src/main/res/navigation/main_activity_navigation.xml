<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:startDestination="@id/home">

    <!-- Fragment Home -->
    <fragment
        android:id="@+id/home"
        android:name="dreammaker.android.expensetracker.fragment.Home"
        android:label="@string/app_name"
        tools:layout="@layout/home">
        <action
            android:id="@+id/action_home_to_accounts_list"
            app:destination="@id/account_list"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left"/>
        <action
            android:id="@+id/action_home_to_persons_list"
            app:destination="@+id/persons_list"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left"/>
        <action
            android:id="@+id/action_home_to_history_list"
            app:destination="@id/history_list"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left"/>
    </fragment>

    <!-- Fragment Input Transaction -->
    <fragment
        android:id="@+id/inputTransaction"
        android:name="dreammaker.android.expensetracker.fragment.InputTransaction"
        android:label="@string/label_insert_transaction"
        tools:layout="@layout/input_transaction" />

    <!-- Fragment Transactions List -->
    <fragment
        android:id="@+id/transactionsList"
        android:name="dreammaker.android.expensetracker.ui.history.viewhistories.daily.DailyViewHistoryFragment"
        android:label="@string/label_transactions_list"
        tools:layout="@layout/list_content">
        <action
            android:id="@+id/action_transactionsList_to_inputTransaction"
            app:destination="@id/inputTransaction"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left"
            app:popUpTo="@id/transactionsList"/>
        <action
            android:id="@+id/action_transactionsList_to_filterTransaction"
            app:destination="@id/filterTransaction"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left"
            app:popUpTo="@id/transactionsList"/>
    </fragment>

    <!-- Fragment Filter Transactions -->
    <fragment android:id="@+id/filterTransaction"
        android:name="dreammaker.android.expensetracker.fragment.FilterTransaction2"
        android:label="@string/label_filter_transaction"
        tools:layout="@layout/layout_filter_transaction"/>


    <!-- Account -->
    <fragment android:id="@+id/account_list"
        android:name="dreammaker.android.expensetracker.ui.account.accountlist.AccountsListFragment"
        android:label="@string/title_account_list"
        tools:layout="@layout/accounts_list">
        <action android:id="@+id/action_account_list_to_view_account"
            app:destination="@id/view_account"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left"/>
        <action android:id="@+id/action_account_list_to_create_account"
            app:destination="@id/account_input"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left"/>
    </fragment>

    <fragment android:id="@+id/view_account"
        android:name="dreammaker.android.expensetracker.ui.account.viewaccount.ViewAccountFragment"
        android:label="@string/title_view_account"
        tools:layout="@layout/view_account_layout">

        <action android:id="@+id/action_view_account_to_history_input"
            app:destination="@id/history_input"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left"/>

        <action android:id="@+id/action_view_account_to_edit_account"
            app:destination="@id/account_input"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left"/>

    </fragment>

    <fragment android:id="@+id/account_input"
        android:name="dreammaker.android.expensetracker.ui.account.inputaccount.AccountInputFragment"
        tools:layout="@layout/input_account"/>

    <!-- Person -->
    <fragment android:id="@+id/persons_list"
        android:name="dreammaker.android.expensetracker.ui.person.personlist.PeopleListFragment"
        android:label="@string/title_people_list"
        tools:layout="@layout/list_content">
        <action
            android:id="@+id/action_persons_list_to_create_person"
            app:destination="@id/person_input"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left" />
        <action android:id="@+id/action_persons_list_to_view_person"
            app:destination="@id/view_person"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left"/>
    </fragment>

    <fragment android:id="@+id/view_person"
        android:name="dreammaker.android.expensetracker.ui.person.viewperson.ViewPersonFragment"
        android:label="@string/title_view_person">
        <action
            android:id="@+id/action_personsList_to_history_list"
            app:destination="@id/history_list"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left" />
        <action
            android:id="@+id/action_personsList_to_create_history"
            app:destination="@id/history_input"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left"/>
        <action
            android:id="@+id/action_personsList_to_edit_person"
            app:destination="@id/person_input"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left" />
    </fragment>

    <fragment android:id="@+id/person_input"
        android:name="dreammaker.android.expensetracker.ui.person.inputperson.PersonInputFragment"
        tools:layout="@layout/input_person"/>

    <!-- History -->

    <fragment android:id="@+id/history_list"
        android:name="dreammaker.android.expensetracker.ui.history.viewhistories.daily.DailyViewHistoryFragment"
        android:label="@string/title_history_list"
        tools:layout="@layout/list_content">
        <action android:id="@+id/action_history_list_to_history_input"
            app:destination="@id/history_input"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left"/>
        <action android:id="@+id/action_history_list_to_history_item"
            app:destination="@id/history_item"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left"/>
    </fragment>

    <fragment android:id="@+id/history_item"
        android:name="dreammaker.android.expensetracker.ui.history.historyitem.ViewHistoryItemFragment"
        tools:layout="@layout/history_item_layout">
        <action android:id="@+id/action_history_item_to_view_account"
            app:destination="@id/view_account"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left"/>
        <action android:id="@+id/action_history_item_to_edit_history"
            app:destination="@id/history_input"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left" />
    </fragment>


    <fragment
        android:id="@+id/history_input"
        android:name="dreammaker.android.expensetracker.ui.history.historyinput.HistoryInputFragment"
        android:label="@string/title_input_history_create"
        tools:layout="@layout/history_input_layout">

        <action android:id="@+id/action_history_input_to_account_chooser_list"
            app:destination="@id/pick_history_account"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left"/>

    </fragment>
    <fragment
        android:id="@+id/pick_history_account"
        android:name="dreammaker.android.expensetracker.ui.history.historyinput.PickHistoryAccountFragment"
        android:label="@string/title_account_chooser"
        tools:layout="@layout/chooser_list_layout"/>

</navigation>